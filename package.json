{
  "name": "jelly-bean-engine-v1.0",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "vite build",
    "package": "npm run dist && electron-builder",
    "package:win": "npm run dist && electron-builder --win --x64"
    ,"package:simple:win": "npm run dist && electron-packager . \"Jelly Bean Engine\" --platform=win32 --arch=x64 --out=release --overwrite --asar=false"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "playwright": "^1.40.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.0"
  }
  ,
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.jellybean.engine",
    "productName": "Jelly Bean Engine",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
